<?xml version="1.0" encoding="UTF-8"?>
<project name="YuiBase" default="local">
    <description>Attribute Build File</description>
    <property file="build.properties" />

    <import file="${builddir}/3.x/bootstrap.xml" description="Default Build Properties and Targets" />

    <import file="loader-extras.xml" description="YUI Core Extras" />
    <target name="local" depends="init, -exec-meta-join, build, loader, minify, lint" description="Build and Deploy to Local Build Directory" />

    <target name="-exec-meta-join">
        <exec executable="node" failonerror="true">
            <arg value="${srcdir}/src/loader/scripts/meta_join.js"/>
        </exec>
    </target>
</project>
